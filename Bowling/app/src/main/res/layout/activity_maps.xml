<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/main_fm"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/game_fm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">

                </FrameLayout>

                <WebView
                    android:id="@+id/web_dash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/lay_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:map="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MapsActivity" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="게임" />

            <Button
                android:id="@+id/bt_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="대시보드" />

            <Button
                android:id="@+id/bt_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickBt_map"
                android:text="볼링장찾기" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:visibility="visible">

        <EditText
            android:id="@+id/login_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="83dp"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_id"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_id"
            android:layout_marginTop="208dp"
            android:text="회원가입"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/login_id"
            android:layout_alignTop="@+id/tv_register"
            android:text="ID/PW 찾기"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="51dp"
            android:text="ID"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_pwd"
            android:layout_alignStart="@+id/textView3"
            android:text="PW"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="213dp"
            android:layout_height="54dp"
            android:layout_alignEnd="@+id/login_id"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="194dp"
            android:background="@drawable/back"
            android:onClick="clickBt_login"
            android:text="LOGIN"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="72dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="183dp"
            android:text="연락처"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_above="@+id/input_tel"
            android:layout_alignStart="@+id/textView7"
            android:text="이름"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_above="@+id/input_name"
            android:layout_alignStart="@+id/textView6"
            android:text="비번"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="72dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/input_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:text="아이디"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/input_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/input_id"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="이메일 형식으로 입력하세요"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/input_id"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignStart="@+id/input_id"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/success"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_alignEnd="@+id/input_tel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="195dp"
            android:background="@drawable/back"
            android:text="회원가입"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/success"
            android:layout_marginStart="26dp"
            android:background="@drawable/back"
            android:onClick="clickBt_reg_cancle"
            android:text="취소"
            android:textColor="@android:color/white"
            android:textSize="24sp" />


    </RelativeLayout>

</FrameLayout>

